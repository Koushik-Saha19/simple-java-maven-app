pipeline {
    agent any
    tools {
        maven 'LocalMVN'
        jdk 'LocalJDK'
    }
    stages {
        stage ('Jmeter Test') {
            steps {
                sh '/opt/jmeter/apache-jmeter-5.2.1/bin/jmeter.sh -jjmeter.save.saveservice.output_format=xml -Jjmeter.save.saveservice.response_data.on_error=true -n -t /opt/jmeter/apache-jmeter-5.2.1/res/test.jmx'
        
            }
            
        }
    }
    post {
        always {
            step([$class: 'ArtifactArchiver', artifacts: '**/*.jtl'])
        }
    }
}
