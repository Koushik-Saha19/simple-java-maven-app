pipeline {
    agent any
    tools {
        maven 'Apache Maven 3.3.9'
        jdk 'JAVA_HOME'
    }
    stages {
        stage ('Jmeter Test') {
            steps {
                sh '/opt/jmeter/apache-jmeter-5.2.1/bin/jmeter.sh -Jjmeter.save.saveservice.output_format=xml -n -t /home/ubuntu/test.jmx -l /opt/jmeter/apache-jmeter-5.2.1/bin/report2.jtl'
                
        
            }
            
        }
    }
    post {
        always {
                
                perfReport compareBuildPrevious: true, filterRegex: '', sourceDataFiles: '/opt/jmeter/apache-jmeter-5.2.1/bin/report2.jtl'
               
        }
    }
  
}
